{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "registries": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Project name for the shadcn project encapsulation"
                    },
                    "slug": {
                        "type": "string",
                        "description": "Project aliases"
                    },
                    "description": {
                        "type": "string",
                        "description": "Project description"
                    },
                    "categories": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": [
                                "Libraries & Components",
                                "Templates & Starters",
                                "Plugins & Tools",
                                "Design & Style Resources",
                                "IconFont",
                                "Shadcn Blocks"
                            ]
                        },
                        "description": "project category"
                    },
                    "links": {
                        "type": "object",
                        "properties": {
                            "homepage": {
                                "type": "string",
                                "format": "uri",
                                "description": "project homepage"
                            },
                            "repository": {
                                "type": "string",
                                "format": "uri",
                                "description": "project repository url"
                            }
                        },
                        "required": [
                            "homepage",
                            "repository"
                        ],
                        "description": "project links"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "active",
                            "deprecated"
                        ],
                        "default": "active",
                        "description": "project status"
                    },
                    "author": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Project Author Name"
                            },
                            "github": {
                                "type": "string",
                                "description": "Project Author GitHub"
                            }
                        },
                        "required": [
                            "name"
                        ],
                        "description": "Project Author Information"
                    },
                    "github": {
                        "type": "object",
                        "properties": {
                            "star": {
                                "type": "number",
                                "description": "Project GitHub Star"
                            }
                        },
                        "required": [
                            "star"
                        ],
                        "description": "Project GitHub Information"
                    },
                    "added_at": {
                        "type": "string",
                        "description": "Project Added Time"
                    },
                    "updated_at": {
                        "type": "string",
                        "description": "Project Updated Time"
                    }
                },
                "required": [
                    "name",
                    "slug",
                    "description",
                    "categories",
                    "links",
                    "status",
                    "author",
                    "github",
                    "added_at",
                    "updated_at"
                ]
            }
        }
    },
    "required": [
        "$schema",
        "registries"
    ]
}
